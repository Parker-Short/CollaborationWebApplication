@page
@model CollaborationWebApplication.Pages.Users.IndexModel
@{
    ViewData["Title"] = "User Listing";
}

<h2>User Listing</h2>
<table class="table table-bordered table-responsive table-hover">
    <thead>
        <tr>
            <th>User ID</th>
            <th>First Name</th>
            <th>Last Name</th>
            <th>Email</th>
            <th>Phone</th>
            <th>Address</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var user in Model.Users)
        {
            <tr>
                <td>@user.UserID</td>
                <td>@user.FirstName</td>
                <td>@user.LastName</td>
                <td>@user.Email</td>
                <td>@user.Phone</td>
                <td>@user.Address</td>
            </tr>
        }
    </tbody>
</table>
