@page
@model CollaborationWebApplication.Pages.Datasets.IndexModel

@{
    ViewData["Title"] = "Datasets";
}
<!-- Container for the dataset cards -->
<div class="container mt-4">
    <div class="row">
        <!-- Loop through each dataset in the Model.Datasets collection -->
        @foreach (var dataset in Model.Datasets)
        {
            // Each dataset is displayed as a card in a grid
            <div class="col-md-4">
                <div class="card mb-4 shadow-sm">
                    <div class="card-body">
                        <p class="card-text">@dataset</p> <!-- Use dataset directly -->
                        <a href="@Url.Page("/Datasets/ViewData", new { fileName = dataset })" class="btn btn-primary">View Data</a>
                    </div>
                </div>
            </div>
        } 
        }
    </div>
</div>
