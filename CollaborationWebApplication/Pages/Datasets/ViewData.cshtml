@page
@using System.Data
@using System.Data.SqlClient
@using CollaborationWebApplication.Pages.DB
@model ViewDataModel
@{
    ViewData["Title"] = $"Data for {Model.TableName}";
}

<h1>Data for @Model.TableName</h1>

@if (Model.DatasetData != null && Model.DatasetData.Rows.Count > 0)
{
    <table class="table">
        <thead>
            <tr>
                @foreach (DataColumn col in Model.DatasetData.Columns)
                {
                    <th>@col.ColumnName</th>
                }
            </tr>
        </thead>
        <tbody>
            @foreach (DataRow row in Model.DatasetData.Rows)
            {
                <tr>
                    @foreach (DataColumn col in Model.DatasetData.Columns)
                    {
                        <td>@row[col.ColumnName]</td>
                    }
                </tr>
            }
        </tbody>
    </table>
}
else
{
    <p>No data found for this dataset.</p>
}
